<h1>All Articles Hub</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @articles5.each do |articlename| %>
            <tr>
                <td><%= articlename.title %></td>
                <td><%= articlename.description %></td>
                <td><%= link_to "Show", article_path(articlename) %></td>
                <td><%= link_to "Edit", edit_article_path(articlename) %></td>
                <td><%= link_to "Delete", article_path(articlename), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<p>
    <%= link_to "Create new article", new_article_path %>
</p>
<p>
<%= link_to "HomePage", root_path %> |
<%= link_to "About", about_path %> 
</p>